<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <ImageView
            android:id="@+id/bookmark_title_img_iv"
            android:layout_width="200dp"
            android:layout_height="355dp"
            android:src="@drawable/book_img"
            />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingHorizontal="10dp"
        >
        <TextView
            android:id="@+id/bookmark_title_tv"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:gravity="left|center"
            android:text="도서명"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/bookmark_writer_tv"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="left|center"
            android:text="저자"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/bookmark_title_tv"
            />
        <TextView
            android:id="@+id/bookmark_publisher_tv"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="left|center"
            android:text="출판사"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/bookmark_writer_tv"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bookmark_prefer_frame_cly"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/bookmark_publisher_tv">
            <LinearLayout
                android:id="@+id/bookmark_prefer_left_frame_ly"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent">
                <TextView
                    android:id="@+id/bookmark_short_tv"
                    android:layout_width="185dp"
                    android:layout_height="match_parent"
                    android:text="상세"
                    android:gravity="center"
                    />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:id="@+id/bookmark_date_tv"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="left|center"
            android:text="즐겨찾기일"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/bookmark_prefer_frame_cly"

            />
        <TextView
            android:id="@+id/bookmark_pre_title_tv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:gravity="left|center"
            android:text="취향: "
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/bookmark_date_tv"
            app:layout_constraintStart_toStartOf="parent"
            />
        <TextView
            android:id="@+id/bookmark_prefer_tv"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:gravity="left|center"
            android:text="로맨스"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            app:layout_constraintTop_toBottomOf="@id/bookmark_date_tv"
            app:layout_constraintStart_toEndOf="@id/bookmark_pre_title_tv"
            />
        <TextView
            android:id="@+id/bookmark_info_tv"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:background="@drawable/radious_layout"
            android:backgroundTint="#00bb00"
            android:text="상세보기"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="60dp"
            android:layout_marginRight="40dp"
            app:layout_constraintTop_toBottomOf="@id/bookmark_date_tv"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <TextView
            android:id="@+id/bookmark_delete_tv"
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:background="@drawable/radious_layout"
            android:backgroundTint="#dd0000"
            android:text="삭제"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@id/bookmark_date_tv"
            app:layout_constraintEnd_toEndOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>