<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.9">
        <TextView
            android:id="@+id/user_pref_select_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:layout_marginTop="25dp"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        <ImageView
            android:id="@+id/user_pref_header_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="90dp"
            android:src="@drawable/user_info_header"
            android:visibility="visible"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/user_pref_list_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:paddingVertical="35dp"
        android:paddingHorizontal="80dp">
        <Button
            android:id="@+id/user_pref_ok_bt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/radious_btn_layout"
            android:backgroundTint="#A5C2F8"
            android:text="확인"
            android:textSize="20dp"
            android:textStyle="bold"
            />


    </LinearLayout>

</LinearLayout>