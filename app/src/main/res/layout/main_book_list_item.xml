<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/main_pre_frame_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <Button
            android:id="@+id/main_pre_tag_1_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test"
            android:layout_marginVertical="20dp" />
        <Button
            android:id="@+id/main_pre_tag_2_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="10dp"/>
        <Button
            android:id="@+id/main_pre_tag_3_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="10dp"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/main_book_image_iv"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        app:layout_constraintTop_toBottomOf="@id/main_pre_frame_ly"
        app:layout_constraintBottom_toTopOf="@id/main_book_text_ly"/>
    <LinearLayout
        android:id="@+id/main_book_text_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <TextView
            android:id="@+id/main_book_title_tv"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="책 이름"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/main_writer_tv"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="저자"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>