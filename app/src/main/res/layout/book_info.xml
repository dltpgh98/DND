<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.9">
        <TextView
            android:id="@+id/book_Title_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="도서명"
            android:autoSizeTextType="uniform"
            android:textStyle="bold"
            android:layout_margin="8dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.2">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:id="@+id/book_title_img_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/book_img"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="5dp"
                />
        </LinearLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingHorizontal="10dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >
            <TextView
                android:id="@+id/book_title_tv"
                android:layout_width="match_parent"
                android:layout_height="40dp"

                android:gravity="left|center"
                android:text="도서명"
                android:textSize="15dp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/book_writer_tv"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="left|center"
                android:text="저자"
                android:textSize="15dp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/book_title_tv"
                />
            <TextView
                android:id="@+id/book_publisher_tv"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="left|center"
                android:text="출판사"
                android:textSize="15dp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/book_writer_tv"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/book_prefer_frame_cly"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@id/book_publisher_tv">
                <LinearLayout
                    android:id="@+id/book_prefer_left_frame_ly"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent">
                    <TextView
                        android:id="@+id/book_prefer_title_tv"
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:gravity="left|center"
                        android:text="취향태그"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/book_prefer_right_frame1_ly"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/book_prefer_left_frame_ly"
                    >
                    <TextView
                        android:id="@+id/book_prefer_tag1_tv"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:background="@drawable/radious_layout_transparency"
                        android:backgroundTint="#3050d0"
                        android:text="tag1"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:gravity="center"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="parent"
                        />
                    <TextView
                        android:id="@+id/book_prefer_tag2_tv"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:background="@drawable/radious_layout_transparency"
                        android:backgroundTint="#3050d0"
                        android:text="tag2"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:gravity="center"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="parent"
                        />
                    <TextView
                        android:id="@+id/book_prefer_tag3_tv"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:background="@drawable/radious_layout_transparency"
                        android:backgroundTint="#3050d0"
                        android:text="tag3"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:gravity="center"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="parent"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center"
                    app:layout_constraintTop_toBottomOf="@id/book_prefer_right_frame1_ly"
                    app:layout_constraintLeft_toRightOf="@id/book_prefer_left_frame_ly"
                    >
                    <TextView
                        android:id="@+id/book_prefer_tag4_tv"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:background="@drawable/radious_layout_transparency"
                        android:backgroundTint="#3050d0"
                        android:text="tag4"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:gravity="center"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="parent"
                        />
                    <TextView
                        android:id="@+id/book_prefer_tag5_tv"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:background="@drawable/radious_layout_transparency"
                        android:backgroundTint="#3050d0"
                        android:text="tag5"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:gravity="center"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="parent"
                        />
                    <TextView
                        android:id="@+id/book_prefer_tag6_tv"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:background="@drawable/radious_layout_transparency"
                        android:backgroundTint="#3050d0"
                        android:text="tag6"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:gravity="center"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="parent"
                        />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:id="@+id/book_date_tv"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="left|center"
                android:text="즐겨찾기일"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@id/book_prefer_frame_cly"

                />
            <ImageButton
                android:id=""
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/ic_baseline_star_24"
                android:backgroundTint="#e5e500"
                android:gravity="center"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/book_date_tv"
                app:layout_constraintEnd_toEndOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2sp"
        android:background="@color/black"
        android:layout_marginHorizontal="20dp"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <TextView
            android:id="@+id/book_info_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="23dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:background="#f2f2f2"
            android:hint="상세내역"
            android:breakStrategy="simple"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>